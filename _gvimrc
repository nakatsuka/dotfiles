""
"" COLORSCHEME solarized
""
"set background=dark
"colorscheme solarized
"hi SpecialKey guifg=#003b46
"hi NonText guibg=#001b26 guifg=Gray40
"gui
"set transparency=235

"
" COLORSCHEME morning
"
colorscheme morning
hi SpecialKey guifg=#104b56 guibg=#cccccc
hi Visual guibg=grey70

"
" FONT configuration
"
" @see kaoriya default gvimrc
"
if has('win32')
	set guifont=Migu\ 1M:h12
	"set guifont=Ricty:h12
	"" guifontwide work with only enc=utf8
	"" in kaoriya version VIM, to enable enc=utf8, copy switches/catalog/utf8.vim to switches/enabled/
	"set guifont=Inconsolata:h13 
	"set guifontwide=Migu\ 1M:h12
	"" @see Osaka font license
	"set guifont=Osaka−等幅:h12
	"set guifont=Osaka_unicode:h12
	" Number of pixel lines inserted between characters.
	set linespace=1
	" 一部のUCS文字の幅を自動計測して決める
	if has('kaoriya')
		set ambiwidth=auto
	endif
elseif has('mac')
	set guifont=Osaka−等幅:h14
elseif has('xfontset')
	" UNIX用 (xfontsetを使用)
	set guifontset=a14,r14,k14
endif
